<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grediend"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ediTextPassword"
        android:layout_width="400dp"
        android:layout_height="45dp"
        android:layout_marginTop="85dp"
        android:drawableStart="@drawable/ic_baseline_account_circle_24"
        android:hint=" hello@davidhuge.com "
        android:paddingStart="20dp"
        android:textColorHint="@color/white"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@id/ediTextPassword"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_marginTop="185dp"
        android:drawableStart="@drawable/ic_privacy"
        android:hint=" ********* "
        android:paddingStart="20dp"
        android:textColorHint="@color/white"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="40dp"
        android:id="@+id/btn"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ediTextPassword"
        android:text="login"/>

    <TextView
        android:id="@+id/dontHaveAnAccaunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don 't have an accaunt?"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="120dp"

        app:layout_constraintTop_toBottomOf="@id/btn"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registr"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn"
        app:layout_constraintStart_toEndOf="@id/dontHaveAnAccaunt"
/>


</androidx.constraintlayout.widget.ConstraintLayout>